<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/launch_background">
    <TextView
        android:id="@+id/launch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="金山视频云短视频SDK"
        android:textColor="#ffffff"
        android:textSize="27sp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/launch_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:alpha="0.8"
        android:background="#07080B"
        android:text="提供集拍摄、编辑、合成、上传、转码、存储、分发、播放等功能为一体化的、专业的短视频服务。"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_start_short_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="开启短视频"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:background="@color/record_text_selected"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:text="SDK V1.0.0版本"
        android:textColor="@drawable/config_text_color"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="北京金山云网络技术有限公司"
        android:textColor="@drawable/config_text_color"
        android:textSize="14sp"/>
</RelativeLayout>
